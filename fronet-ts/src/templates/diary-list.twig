<div class="container mx-auto py-8">
  <h1 class="text-3xl font-bold mb-4 text-brown-900">Diary List</h1>
  <ul class="space-y-4">
    {% for diary in diaries %}
      <li class="bg-white shadow-md rounded-4xl p-6 hover:shadow-lg transition-shadow duration-300">
        <a href="#/diary/{{ diary.id }}"
           class="text-xl font-semibold text-brown-800 hover:text-brown-600 transition-colors duration-300">{{ diary.title }}</a>
        <p class="text-brown-700 mt-2">{{ diary.content }}</p>
        <p class="text-brown-500 mt-1 text-sm">{{ diary.date }}</p>
        <div class="mt-4 flex space-x-2">
          <!-- Display emotion icons here -->
          <span class="inline-block w-6 h-6 bg-yellow-300 rounded-full"></span>
          <span class="inline-block w-6 h-6 bg-red-300 rounded-full"></span>
          <span class="inline-block w-6 h-6 bg-green-300 rounded-full"></span>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
